    "userInterfaces": {
        "configModal": {
            "url": "index.html",
            "height": 500,
            "width": 700
        }
    },
    "schema": {
        "arguments": {
            "execute": {
                "inArguments": [
                    { "channelNumber": { "dataType": "Text", "isNullable": false, "direction": "in" } },
                    { "authToken": { "dataType": "Text", "isNullable": false, "direction": "in" } },
                    { "templateName": { "dataType": "Text", "isNullable": false, "direction": "in" } },
                    { "templateParams": { "dataType": "Text", "isNullable": true, "direction": "in" } },
